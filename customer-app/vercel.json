{
  "version": 2,
  "builds": [
    { "src": "server/node-build.ts", "use": "@vercel/node" },
    { "src": "vite.config.ts", "use": "@vercel/static-build", "config": { "distDir": "dist/spa" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/node-build.ts" },
    { "src": "/(.*)", "dest": "/dist/spa/$1" }
  ]
}
